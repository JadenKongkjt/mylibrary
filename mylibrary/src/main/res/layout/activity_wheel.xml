<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="27dip"
    android:layout_marginRight="27dip"
    android:background="@drawable/bg_dialog_selector"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="20dip">

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dip"
            android:text="请选择地区"
            android:textColor="#000000"
            android:textSize="18sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="160dip"
        android:layout_marginTop="30dip"

        android:orientation="horizontal">

        <com.betterda.mylibrary.wheel.widget.views.WheelView
            android:id="@+id/id_province"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.betterda.mylibrary.wheel.widget.views.WheelView>

        <com.betterda.mylibrary.wheel.widget.views.WheelView
            android:id="@+id/id_city"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.betterda.mylibrary.wheel.widget.views.WheelView>

        <com.betterda.mylibrary.wheel.widget.views.WheelView
            android:id="@+id/id_district"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></com.betterda.mylibrary.wheel.widget.views.WheelView>
    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_marginTop="25dip"
        android:layout_marginBottom="21dip"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="#00000000"
        android:gravity="center"
        android:text="确定"
        android:textColor="#000000" />

</LinearLayout>